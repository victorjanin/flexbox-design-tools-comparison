{
    "source": [
        "tokens/**/*.json"
    ],
    "platforms": {
        "css": {
            "transformGroup": "css",
            "transforms": [
                "attribute/cti",
                "name/cti/kebab",
                "color/hex",
                "size/px"
            ],
            "prefix": "fb",
            "files": [
                {
                    "destination": "css/variables.css",
                    "format": "css/variables"
                }
            ]
        }
    }
}